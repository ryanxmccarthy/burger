<div class="container-fluid"> 
  <div class="row text-center" id="header">
    <h1>Eat Da Burger</h1>
  </div>

  <div class="row text-center" id="display">
    <div class="col-xs-6" id="nondevoured">
      <h2>Burgers to Eat!</h2>

      <ol>
        {{#each burgers}}
          {{#unless this.devoured}}
            <li>
              {{this.id}}
              {{this.burger_name}}

              <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="true">
                <button type="submit">Devour It!</button>
              </form>
            </li>
          {{/unless}}
        {{/each}}
      </ol>
    </div>

    <div class="col-xs-6" id="devoured">
      <h2>Devoured Burgers!</h2>

      <ol>
        {{#each burgers}}
          {{#if this.devoured}}
            <li>
              {{this.id}}
              {{this.burger_name}}

              <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="false">
                <button type="submit">Order Another</button>
              </form>
            </li>
          {{/if}}
        {{/each}}
      </ol>
    </div>
  </div>

  <div class="row text-center" id="add">

    <div class="col-xs-0 col-sm-4">
    </div>

    <div class="col-xs-12 col-sm-4" id="add-form">
      <h2>Add a Burger</h2>
      <form class="create-update-form" action="/" method="POST">

        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
        </div>

        <button type="submit">Add Burger</button>
      </form>
    </div>

    <div class="col-xs-0 col-sm-4">
    </div>

  </div>
</div>